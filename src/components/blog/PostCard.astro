---
import type { CollectionEntry } from 'astro:content';
import { format, parseISO } from 'date-fns';

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props;
---

<div class="group mb-10 space-x-3 space-y-1 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0">
  {post.data.pubDate && <time
    datetime={post.data.pubDate}
    class="mb-4 rounded-full font-mono text-xxs xl:text-xs"
  >
    {format(post.data.pubDate, 'LLLL d, yyyy')}
  </time>}

  <a
    href={`/blog/${post.id}`}
    class="plain space-y-3 xl:col-span-3"
  >
    <div class="rounded-lg xl:p-4 xl:hover:bg-gray-100 xl:dark:hover:bg-black">
      <h2 class="mb-1 text-xl font-normal text-gray-900 group-hover:text-primary dark:text-gray-100 dark:group-hover:text-primary">
        {post.data.title}
      </h2>
      <p class="text-base font-normal text-gray-500">
        {post.data.description}
      </p>
    </div>
  </a>
</div>